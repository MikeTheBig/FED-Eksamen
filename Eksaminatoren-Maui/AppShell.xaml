<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:Eksaminatoren_Maui.Views"
    xmlns:local="clr-namespace:Eksaminatoren_Maui"
    x:Class="Eksaminatoren_Maui.AppShell"
    Shell.FlyoutBehavior="Disabled" >

    <!-- Flyout eller bottom tab navigation -->
 <TabBar>
    <Tab Title="Startside" Icon="icon_home.png">
        <ShellContent ContentTemplate="{DataTemplate local:MainPage}" />
    </Tab>

    <Tab Title="Eksamener" Icon="icon_exam.png" Route="Eksamener">
        <ShellContent ContentTemplate="{DataTemplate views:ExamView}" />
    </Tab>

    <Tab Title="Studerende" Icon="icon_student.png" Route="Studerende">
        <ShellContent ContentTemplate="{DataTemplate views:StudentView}" />
    </Tab>

    <Tab Title="Historik" Icon="icon_results.png" Route="Historik">
        <ShellContent ContentTemplate="{DataTemplate views:HistoryView}" />
    </Tab>
    </TabBar>
</Shell>
