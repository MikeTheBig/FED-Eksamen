<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Eksaminatoren_Maui.Views.StudentView"
             Title="Studerende">

    <VerticalStackLayout Padding="20" Spacing="15">
        <Label Text="Studerende til eksamen" FontSize="24" HorizontalOptions="Center"/>

        <CollectionView ItemsSource="{Binding Students}">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <StackLayout Padding="10">
                        <Label Text="{Binding Order}" />
                        <Label Text="{Binding Name}" />
                        <Label Text="{Binding StudentNumber}" />
                    </StackLayout>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <Entry Placeholder="Studienummer" Text="{Binding StudentNumber}" />
        <Entry Placeholder="Navn" Text="{Binding Name}" />
        <Button Text="TilfÃ¸j Studerende" Command="{Binding AddStudentCommand}" />

    </VerticalStackLayout>
</ContentPage>
